    "version": "2.0.0",
    "tasks": [
        {
            "type": "npm",
            "script": "build-model",
            "problemMatcher": [
                "$tsc"
            ]
        },
        {
            "type": "npm",
            "script": "deploy-model",
        },
        {
            "type": "npm",
            "script": "build-deploy-model",
            "problemMatcher": [
                "$tsc"
            ]
        },
        {
            "type": "npm",
            "script": "deploy-lambda",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$tsc"
            ]
        },

        {
            "type": "npm",
            "script": "tsc-watch",
            "label": "Watch Lambda",
            "path": "lambda/",
            "problemMatcher": [
                "$tsc"
            ]
        },
        {
            "type": "npm",
            "script": "test",
            "path": "lambda/",
            "problemMatcher": [
                "$tsc"
            ]
        }
    ]
}