{
    "compilerOptions": {
        "lib": [ "es2018" ],
        "module": "commonjs",
        "strict": true,
        "outDir": "./dist/",
        "target": "es6",
        "sourceMap": true, 
        
        "strictNullChecks": true,
        "noImplicitAny": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "resolveJsonModule": true
    },
    "include": [
        "./src/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        // "**/*.d.ts"
    ]
}